    <% include ../../partials/head %>
    <body class="buy-form">
        <% include ../../partials/navbar %>
        <main>
            <div class="container">
                <div class="col-12 text-center mt-4">
                    <h1>Formulaire de commande de produit NTX</h1>
                    <p>Veuillez remplir tous les champs du formulaire et vérifier les valeurs rentrées.</p>
                </div>
            </div>
            <form method="POST" action="/shopping-cart/confirmation" id="buy-form">
                <div class="container mt-5">
                    <h2 class="text-center">Récapitulatif du panier</h2>
                    <div class="row">
                        <div class="col-12">
                            <h3 class="text-left">Article :</h3>
                        </div>
                        <div class="col-12" id="display-cart"></div>
                    </div>
                    <h2 class="text-center mt-4">Coordonnées personnel</h2>
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <label for="name">Nom</label>
                            <input type="text" class="form-control" name="name" placeholder="ex. Pasquier" value="" required>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" name="firstname" placeholder="ex. William" value="" required>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="ex. williampasquier.pro@gmail.com" value="" required>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="adress">Adresse</label>
                            <input type="text" class="form-control" name="adress" placeholder="ex. Rue Inventée 1" value="" required>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="NPA">Code postale</label>
                            <input type="text" class="form-control" name="NPA" placeholder="ex. 1234" value="" required>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="city">Ville</label>
                            <input type="text" class="form-control" name="city" placeholder="ex. Morioh" value="" required>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <label for="country">Pays</label>
                            <select class="browser-default custom-select" id="country" name="country">
                                <option selected>Choisissez votre pays</option>
                                <% for(let i = 0; i < countryList.length ; i++) { %>
                                    <option name="<%= countryList[i] %>"value="<%= countryList[i] %>"><%= countryList[i] %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-12 mt-5">
                            <button class="btn btn-primary btn-lg btn-block btn-dark" id="buy-confirm" type="submit" form="buy-form">
                                Confirmation de paiement
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-credit-card-2-back-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v5H0V4zm11.5 1a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h2a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-2z"/>
                                    <path d="M0 11v1a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-1H0z"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </main>
        <% include ../../partials/footer %>
    </body>
</html>